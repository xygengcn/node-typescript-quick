{
    "name": "node-typescript-quick",
    "version": "0.0.1",
    "description": "快速建立node与typescript项目的初始模版",
    "scripts": {
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "dev": "env-cmd -r .env.js -e development nodemon ./src/index.ts",
        "prepare": "husky install",
        "husky": "husky add .husky/commit-msg \"npx --no-install commitlint --edit \"$1\"\""
    },
    "homepage": "https://xygeng.cn",
    "keywords": [
        "nodejs",
        "typescript"
    ],
    "author": "xygengcn",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^17.4.4",
        "@commitlint/config-conventional": "^17.4.4",
        "@types/node": "^20.10.0",
        "env-cmd": "^10.1.0",
        "eslint": "^9.19.0",
        "husky": "^8.0.3",
        "nodemon": "^3.1.9",
        "prettier": "^2.5.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    }
}
